<%= form_for(@article) do |f| %>
	
	<% @article.errors.full_messages.each do |error| %>
		<%= error %>
	<% end %>

	<%= f.label :title %>
	<%= f.text_field :title %>
	<%= f.label :body %>
	<%= f.text_area :body %>
	<p>
		<%= f.label :tag_list %><br>
		<%= f.text_field :tag_list %>
	</p>
	<%= f.submit %>
	
<% end %>